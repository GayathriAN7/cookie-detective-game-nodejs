{
  "name": "cookie-detective-agent",
  "version": "1.7.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "PORT=3001 NODE_ENV=development nodemon index.js",
    "tunnel": "ssh -nNT -R /var/projects/${npm_package_name}-local/dev.sock:localhost:3001 ${npm_package_name}-local@eu.dev.monkapps.com",
    "build": "rm -rf dist/ && mkdir -p dist && cp -r config scenes lib index.js package.json dist/",
    "deploy": "run-s push deploy:firebase",
    "deploy:firebase": "echo \\\"\\n\\n\\\" | firebase deploy --interactive && node tools/setWebhook.js prod",
    "pull": "cd action/ && rm -rf * && ../tools/gactions pull --projectId `cat ../PROJECT_ID`",
    "push": "cd action/ && ../tools/gactions push",
    "test": "node tools/setWebhook.js dev && yarn push && run-p dev tunnel"
  },
